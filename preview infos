// =============================
//      FETCH USER DATA
// =============================
async function loadUserData(uid) {
    try {
        const docRef = firestore.collection("profiles").doc(uid);
        const docSnap = await docRef.get();

        if (!docSnap.exists) {
            userInfoDiv.innerHTML = "<p>No profile document found.</p>";
            return;
        }

        const data = docSnap.data();
        let html = "";

        for (const groupName in fieldGroups) {
            html += `<div class="section-title">${groupName}</div>`;

            Object.entries(fieldGroups[groupName]).forEach(([label, key]) => {
                const value = data[key] || "<i>Not provided</i>";

                html += `
                    <div class="info-row">
                        <span class="label">${label}</span>
                        <span>${value}</span>
                    </div>
                `;
            });
        }

        userInfoDiv.innerHTML = html;

    } catch (error) {
        console.error("Error loading profile:", error);
        userInfoDiv.innerHTML = "<p>Error loading data.</p>";
    }
}


// =============================
//            LOGOUT
// =============================
document.getElementById("logoutBtn").onclick = () => {
    sessionStorage.clear();
    firebase.auth().signOut();
    location.href = "index.html";
};
